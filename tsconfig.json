{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noEmitOnError": true,
    "baseUrl": "./",
    "paths": {
      "~components/*": ["src/components/*"],
      "~constants/*": ["src/constants/*"],
      "~domains/*": ["src/domains/*"],
      "~hooks/*": ["src/hooks/*"],
      "~images": ["src/images/index"],
      "~images/*": ["src/images/*"],
      "~types": ["src/types/*"],
      "~types/*": ["src/types/*"],
      "~utils/*": ["src/utils/*"],
      "~styles/*": ["src/styles/*"]
    }
  },
  "include": ["src"]
}
